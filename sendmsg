#!/bin/bash
# set +e
# set -x
source config 

count=`ls $D/*.plot |wc -l| xargs echo`
time0=`date "+%Y-%m-%d %H:%M:%S"`
max=$((10#${count}*101))

# msg=$NAME'/'$max'G/'$1'å°æ—¶/ '$NAME'å®Œæˆ'$N'çš„å¼€å¦ğŸŒˆï¼Œæ€»ç”¨æ—¶'$1'å°æ—¶ï¼Œç°åœ¨æ€»å®¹é‡'$max'GğŸ¤Ÿï¼Œå®Œæˆæ—¶é—´ï¼š'$time0
msg=$NAME'|'$max'G|'$1' hour|'$NAME' completed '$N' is plot taskğŸŒˆ, elapsed time '$1' hour, total capacity '$max'GğŸ¤Ÿ, now '$time0
echo $msg

result=`curl 'https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key='"${WXKEY}"'' -H 'Content-Type: application/json' -d '
{
    "msgtype": "text",
    "text": {
        "content": "'"${msg}"'"
  }
}'`

ret=`echo $result | cut -d ":" -f 3 | cut -d '"' -f 2`
if [[ $ret == "ok" ]]; then
	echo "success";
else
	echo "fail"
fi

